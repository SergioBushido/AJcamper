---
/* Redirección en cliente según idioma (o fijo a /es/) */
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex,follow" />
    <script>
      (function () {
        // si quieres siempre ES, deja: location.replace('/es/');
        var lang = (navigator.language || '').toLowerCase();
        var target = '/es/';
        if (lang.startsWith('de')) target = '/de/';
        else if (lang.startsWith('en')) target = '/en/';
        location.replace(target);
      })();
    </script>
  </head>
  <body></body>
</html>