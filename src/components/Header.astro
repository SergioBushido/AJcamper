---
const { t, currentLang } = Astro.props as {
  t: any;
  currentLang: "es" | "en" | "de";
};

import LangSwitcher from "./LangSwitcher.astro";
---

<header class="container header">
  <a class="logo" href={`/${currentLang}/`}>
    <img
      src="/images/logo.webp"
      alt="Aventura Camper"
      width="180"
      height="60"
      style="height:auto;"
    />
    <span>Aventura Camper</span>
  </a>
  <nav class="nav">
    <a href={`/${currentLang}/#gallery`}>{t.nav_gallery}</a>
    <a href={`/${currentLang}/#specs`}>{t.nav_specs}</a>
    <a href={`/${currentLang}/#contact`}>{t.nav_contact}</a>
  </nav>
  <div class="lang">
    <LangSwitcher currentLang={currentLang} />
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.9rem;
    padding-bottom: 0.9rem;
    background: rgba(234, 243, 246, 0.7);
    border-bottom: 1px solid var(--border);
  }

  /* Responsive header */
  @media (max-width: 768px) {
    .header {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .nav {
      order: 3;
      width: 100%;
      justify-content: center;
      margin-top: 0.5rem;
    }

    .lang {
      order: 2;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;
    }

    .nav {
      gap: 0.8rem;
      font-size: 0.9rem;
    }
  }
</style>
