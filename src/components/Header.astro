---
const { t, currentLang } = Astro.props as { t: any; currentLang: 'es'|'en'|'de' };

import LangSwitcher from './LangSwitcher.astro';
---
<header class="container header">
  <a class="logo" href={`/${currentLang}/`}>
    <img src="/images/logo.png" alt="Aventura Camper" width="36" height="36" />
    <span>Aventura Camper</span>
  </a>
  <nav class="nav">
    <a href={`/${currentLang}/#gallery`}>{t.nav_gallery}</a>
    <a href={`/${currentLang}/#specs`}>{t.nav_specs}</a>
    <a href={`/${currentLang}/#contact`}>{t.nav_contact}</a>
  </nav>
  <div class="lang">
    <LangSwitcher currentLang={currentLang} />
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: .9rem 0;
    backdrop-filter: saturate(140%) blur(8px);
    background: rgba(234,243,246,.7);
    border-bottom: 1px solid var(--border);
  }

  /* Responsive header */
  @media (max-width: 768px) {
    .header {
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .nav {
      order: 3;
      width: 100%;
      justify-content: center;
      margin-top: 0.5rem;
    }
    
    .lang {
      order: 2;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: .7rem 0;
    }
    
    .nav {
      gap: .8rem;
      font-size: 0.9rem;
    }
  }
</style>