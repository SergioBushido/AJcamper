---
const { t, currentLang } = Astro.props as {
  t: any;
  currentLang: "es" | "en" | "de";
};
---

<section class="container hero">
  <div>
    <h1>{t.title}</h1>
    <p class="muted">{t.subtitle}</p>

    <div style="display:flex; gap:.75rem; margin-top:1rem;">
      <a class="btn" href={`/${currentLang}/#gallery`}>{t.cta_view_photos}</a>
      <a class="btn btn-outline" href={`/${currentLang}/#contact`}
        >{t.cta_contact}</a
      >
    </div>

    <p style="margin-top:1rem;">
      <strong>{t.price_from} 95€ {t.per_day}</strong>
    </p>

    <!-- NUEVO: explicación + enlace Yescapa -->
    <p class="muted" style="margin:.25rem 0 .5rem 0;">
      {t.rent_note}
    </p>
    <a
      class="btn btn-outline"
      href="https://www.yescapa.es/campers/99514"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Yescapa"
      onclick="window.open(this.href, 'yescapa', 'width=1000,height=800,scrollbars=yes,resizable=yes'); return false;"
    >
      {t.cta_yescapa}
    </a>
  </div>

  <picture>
    <source srcset="/images/hero.jpg" type="image/jpeg" />
    <img
      src="/images/hero.jpg"
      alt="Autocaravana exterior"
      width="1200"
      height="800"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
  </picture>
</section>
