---
export interface Props {
  title: string;
  description: string;
  lang: 'es' | 'en' | 'de';
  altHreflangs?: { es: string; en: string; de: string };
  priceFrom?: number; // precio base por día
}
const { title, description, lang, altHreflangs, priceFrom } = Astro.props;
import '~/styles/global.css';
import WhatsappButton from "../components/WhatsappButton.astro";
import Footer from "../components/Footer.astro";


const site = Astro.site?.origin ?? 'https://www.tudominio.com';
const canonical = new URL(Astro.url.pathname, site).toString();
const brand = 'Aventura Camper';
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Favicon + SVG -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="mask-icon" href="/favicon.svg" color="#0ea5a3" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    
    <!-- Theme Color for Mobile -->
    <meta name="theme-color" content="#0ea5a3" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="alquiler autocaravana, Tenerife, motorhome, camping, turismo, vacaciones, Fiat Enaire" />
    <meta name="author" content="Aventura Camper" />
    <meta name="robots" content="index, follow" />
    
    <link rel="canonical" href={canonical} />
    {altHreflangs && (
      <>
        <link rel="alternate" hreflang="es" href={altHreflangs.es} />
        <link rel="alternate" hreflang="en" href={altHreflangs.en} />
        <link rel="alternate" hreflang="de" href={altHreflangs.de} />
        <link rel="alternate" hreflang="x-default" href={altHreflangs.en} />
      </>
    )}
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={brand} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:locale" content={lang} />
    <meta property="og:image" content={new URL('/images/hero.jpg', site).toString()} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="preload" as="image" href="/images/hero.jpg" fetchpriority="high" />

    <script type="application/ld+json" is:inline>
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Product',
        name: `${brand} — Fiat Enaire 2022 Motorhome Rental`,
        image: [new URL('/images/hero.jpg', site).toString()],
        description,
        brand: {
          '@type': 'Brand',
          name: brand
        },
        manufacturer: {
          '@type': 'Organization',
          name: 'Fiat'
        },
        model: 'Enaire',
        productionDate: '2022',
        vehicleConfiguration: '4 plazas, 3000kg PMA',
        fuelType: 'Diesel',
        vehicleTransmission: 'Manual',
        offers: {
          '@type': 'Offer',
          priceCurrency: 'EUR',
          price: priceFrom ?? 95,
          availability: 'https://schema.org/InStock',
          url: canonical,
          validFrom: new Date().toISOString(),
          priceValidUntil: new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString(),
          seller: {
            '@type': 'Organization',
            name: brand,
            url: site
          }
        },
        aggregateRating: {
          '@type': 'AggregateRating',
          ratingValue: '4.9',
          reviewCount: '24'
        },
        additionalProperty: [
          {
            '@type': 'PropertyValue',
            name: 'Plazas',
            value: '4'
          },
          {
            '@type': 'PropertyValue',
            name: 'Peso máximo',
            value: '3000 kg'
          },
          {
            '@type': 'PropertyValue',
            name: 'Consumo',
            value: '6-8 L/100km'
          },
          {
            '@type': 'PropertyValue',
            name: 'Autonomía',
            value: '10 días'
          }
        ]
      })}
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <WhatsappButton />   <!-- botón fijo -->

  </body>
</html>